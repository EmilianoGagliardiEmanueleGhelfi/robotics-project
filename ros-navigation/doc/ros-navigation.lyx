\end_layout

\begin_layout Plain Layout

rosrun gmapping slam_gmapping scan:=laser_scan
\end_layout

\begin_layout Plain Layout

rosrun joy joy_node # for the use of the joystick
\end_layout

\begin_layout Plain Layout

rosrun teleop_twist_joy teleop_node
\end_layout

\begin_layout Plain Layout

rosrun rviz rviz # map visualization
\end_layout

\end_inset


\end_layout

